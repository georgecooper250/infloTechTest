@model UserManagement.Web.Models.Users.UserListViewModel

<h2>User List</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Forename</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Account Active</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Forename
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.DateOfBirth
                    </td>
                    <td>
                        @(item.IsActive ? "Yes" : "No")
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="btnToggleActions">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnToggleActions">
                                <li>
                                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modal" 
                                    data-content-url="/modals/viewUserModal" data-title="View User" data-user-id="@item.Id">View</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modal" 
                                    data-content-url="/modals/editUserModal" data-title="Edit User" data-user-id="@item.Id">Edit</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modal" 
                                    data-content-url="/modals/deleteUserModal" data-title="Delete User" data-user-id="@item.Id">Delete</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <div class="btn-group" role="group">
        <a asp-controller="Users" asp-action="List" asp-route-status="all" class="btn btn-default">Show All</a>
        <a asp-controller="Users" asp-action="List" asp-route-status="active" class="btn btn-default">Active Only</a>
        <a asp-controller="Users" asp-action="List" asp-route-status="inactive" class="btn btn-default">Non Active</a>
    </div>

    <a href="#" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#modal" 
    data-content-url="/modals/addUserModal" data-title="Add New User">Add User</a>

    <!-- Modal -->
    <div class="modal fade" id="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <!-- Dynamic Modal Content Loaded Here -->
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
    
</div>